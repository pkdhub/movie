/* pages/home/home.wxss */
.movie{
  display:flex;
  padding:10rpx;
  border-bottom: 1px solid #ccc;
}
.movie-img{
  width:200rpx;
  height:300rpx;
  margin-right: 20rpx;
}
.movie-info{
  width:500rpx;
  margin-top:20rpx;
  font-size:28rpx;
  line-height: 1.8
}
.movie-title{
  font-size:40rpx;
  color:#666;
}
.movie-score{
  color:#faaf00
}
.movie-btn{
  height:80rpx;
  line-height:45rpx;
  background:#e54847;
  color:#fff;
  font-size:26rpx;
}
.ellipsis{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}